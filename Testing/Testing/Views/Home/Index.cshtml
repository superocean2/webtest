@{
    ViewBag.Title = "Color";
}
<div class="row result">
    <div class="col-xs-4">
        <span class="circle_bg" id="score">0</span></div>
    <div class="col-xs-8">
        <span class="circle_bg" id="timeleft">0</span>
    </div>
</div>
<div id="testboard">

</div>


<style type="text/css">
    #testboard {
        display: block;
        width: 300px;
        height: 300px;
        margin:0 auto;
    }

        #testboard div {
            float: left;
            border-radius: 10px;
            cursor: pointer;
            border: 2px solid #fff;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
        }

 
    .result {       
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        margin-left: 0;
        margin-bottom:10px;
        width: 300px;
        margin:0 auto;
        height:60px;
    }
    .circle_bg
    {
        border-radius: 25px;
        width:50px;
        height:50px;
        border:solid 5px #0094ff;
        text-align:center;
        font-weight:bold;
        font-size:25px;
        display:table-cell;
        vertical-align:middle;
    }





     @@media screen and (min-width: 370px) {
        #testboard {
            width: 350px;
            height: 350px;
        }
        .result
        {
            width:350px;
        }
    }

    @@media screen and (min-width: 460px) {
        #testboard {
            width: 400px;
            height: 400px;
        }

        .result {
            width: 400px;
        }
    }

    @@media screen and (min-width: 550px) {
        #testboard {
            width: 500px;
            height: 500px;
        }

        .result {
            width: 500px;
        }
    }

    @@media screen and (min-width: 768px) {
        #testboard {
            width: 600px;
            height: 600px;
        }

        .result {
            width: 600px;
        }
    }
</style>

@section scripts
{
    <script src="~/Scripts/colortestnghia.js"></script>
